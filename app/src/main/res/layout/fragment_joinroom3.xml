<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="joinRoomViewModel"
            type="com.example.mnt_android.viewmodel.JoinRoomViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_title_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마니또 시작"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_roomimage_joinroom3"/>

    <ImageView
        android:id="@+id/iv_roomimage_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@id/tv_title_joinroom3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_roomname_joinroom3"/>

    <TextView
        android:id="@+id/tv_roomname_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/iv_roomimage_joinroom3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_setnitto__joinroom3"/>

    <TextView
        android:id="@+id/tv_setnitto__joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@id/tv_roomname_joinroom3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/iv_myimage_joinroom3"/>

    <ImageView
        android:id="@+id/iv_myimage_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@id/tv_setnitto__joinroom3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_nittoimage_joinroom3"
        app:layout_constraintBottom_toTopOf="@id/bu_check_joinroom3"/>

    <ImageView
        android:id="@+id/iv_nittoimage_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintTop_toBottomOf="@id/tv_setnitto__joinroom3"
        app:layout_constraintLeft_toRightOf="@id/iv_myimage_joinroom3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bu_check_joinroom3"
        />

    <Button
        android:id="@+id/bu_check_joinroom3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입장하기"
        android:onClick="@{()->joinRoomViewModel.checkNitto()}"
        app:layout_constraintTop_toBottomOf="@id/iv_myimage_joinroom3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>