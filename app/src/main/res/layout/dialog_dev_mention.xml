<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="301dp"
        android:layout_height="400dp"
        android:background="@drawable/round_layout_white">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/textview_top_round"
            android:padding="16dp">

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                tools:text="개발자 정보" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_below="@id/top_layout"
            android:layout_alignParentBottom="true"
            >

            <TextView
                android:id="@+id/dev_mention"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="left"
                android:text="mention"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:padding="5dp"
                android:background="@drawable/textview_bottomleft_round"
                ></TextView>

            <TextView
                android:id="@+id/dev_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="name"
                android:textSize="13sp"
                android:padding="5dp"
                android:textColor="@color/colorBlack"
                android:background="@drawable/textview_bottomright_round"
                android:gravity="right"></TextView>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


