<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="doMissionViewModel"
            type="com.example.mnt_android.viewmodel.DoMissionViewModel" />
        <variable
            name="doMissionActivity"
            type="com.example.mnt_android.view.ui.DoMissionActivity" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout    android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bu_back_do_mission2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:onClick="@{()->doMissionActivity.onBackPressed()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/bu_next_do_mission2"
            app:layout_constraintBaseline_toBaselineOf="@id/bu_next_do_mission2"/>

        <Button
            android:id="@+id/bu_next_do_mission2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음"
            android:onClick="@{()->doMissionActivity.setFrag(2)}"
            app:layout_constraintBottom_toTopOf="@id/tv_text_do_mission2"
            app:layout_constraintLeft_toRightOf="@id/bu_back_do_mission2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_text_do_mission2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="미리보기 화면"
            app:layout_constraintBottom_toTopOf="@id/linear_do_mission2"
            app:layout_constraintTop_toBottomOf="@+id/bu_next_do_mission2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/linear_do_mission2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/iv_img_mission_do_mission2"
            app:layout_constraintTop_toBottomOf="@+id/tv_text_do_mission2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_from_do_mission2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_round" />
            <TextView
                android:id="@+id/tv_name_from_do_mission2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="who" />


            <ImageView
                android:id="@+id/iv_image_do_mission2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_ff" />

            <ImageView
                android:id="@+id/iv_img_to_do_mission2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/tv_name_to_do_mission2"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:text="TextView" />


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_img_mission_do_mission2"
            android:layout_width="356dp"
            android:layout_height="309dp"
            app:layout_constraintTop_toBottomOf="@+id/linear_do_mission2"
            app:layout_constraintBottom_toTopOf="@+id/tv_text_mission_do_mission2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/kakao_default_profile_image"
            tools:layout_editor_absoluteX="30dp"
            tools:layout_editor_absoluteY="240dp" />

        <TextView
            android:id="@+id/tv_text_mission_do_mission2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{doMissionViewModel.doMission.textMission}"
            app:layout_constraintTop_toBottomOf="@+id/iv_img_mission_do_mission2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="602dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>