<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.mnt_android.viewmodel.ApplicantListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.ui.ApplicantListActivity">
        <Button
            android:id="@+id/close_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="X"/>
        <TextView
            android:id="@+id/applicant_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/close_btn"
            android:gravity="center"
            android:textSize="35sp"
            android:text="참여자 리스트"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/applicant_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/applicant_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:adapterApplicantList="@{viewModel.applicantList}"
            tools:listitem="@layout/item_applicant"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>