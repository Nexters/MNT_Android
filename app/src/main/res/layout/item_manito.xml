<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrow_iv"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/naeto_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_profile_grape"
            />
        <TextView
            android:id="@+id/naeto_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/colorLightBlueBlack"
            tools:text="포도링"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="43dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        android:src="@drawable/arrow_relation"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrow_iv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/nito_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img_profile_face_01"
            />
        <TextView
            android:id="@+id/nito_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/colorLightBlueBlack"
            tools:text="진유진유진유진유진유진유진"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>