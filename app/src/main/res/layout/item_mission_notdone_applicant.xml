<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/round_layout_white_border">


    <TextView
        android:id="@+id/tv_mission_name_notdone_applicant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="미션이름"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:textColor="#222b45"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_mission_isdone_applicant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="수행하기"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="#ff5050"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_mission_notdone_applicant"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/arrow_right"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>